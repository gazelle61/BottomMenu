<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu2">

    <Button
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Bangun Ruang"
        android:backgroundTint="@color/white"
        android:textColor="#11578b"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnKubus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="Kubus"
        android:backgroundTint="#11578b"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBalok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnKubus"
        android:layout_centerInParent="true"
        android:text="Balok"
        android:backgroundTint="#11578b"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnTabung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnBalok"
        android:layout_centerInParent="true"
        android:text="Tabung"
        android:backgroundTint="#11578b"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnKerucut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnTabung"
        android:layout_centerInParent="true"
        android:text="Kerucut"
        android:backgroundTint="#11578b"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnBola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnKerucut"
        android:layout_centerInParent="true"
        android:text="Bola"
        android:backgroundTint="#11578b"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

</RelativeLayout>
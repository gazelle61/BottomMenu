<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu1">

    <Button
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Bangun Datar"
        android:backgroundTint="@color/white"
        android:textColor="#9BC8DC"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPersegi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#9BC8DC"
        android:text="Persegi"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPPanjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPersegi"
        android:layout_centerInParent="true"
        android:text="Persegi Panjang"
        android:textColor="@color/white"
        android:backgroundTint="#9BC8DC"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnJajargenjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPPanjang"
        android:layout_centerInParent="true"
        android:backgroundTint="#9BC8DC"
        android:text="Jajargenjang"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnSegitiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnJajargenjang"
        android:layout_centerInParent="true"
        android:backgroundTint="#9BC8DC"
        android:text="Segitiga"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnLingkaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSegitiga"
        android:layout_centerInParent="true"
        android:backgroundTint="#9BC8DC"
        android:text="Lingkaran"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

</RelativeLayout>

